##################### FIRST LINE #####################################

#### file to allow the install to continue or not
if [ -f /etc/MySB/temp/continue ]; then
	rm -vf /etc/MySB/temp/continue
fi

#### VARs
RemovePluginCakebox=NO
RemovePluginManager=NO

#### Get all repos
AllRepos="`sqlite3 $MySB_DB \"SELECT * FROM repositories WHERE active = '1'\"`"

IFS=$'\n'
for Repo in $AllRepos; do
	RepoType=`echo $Repo | awk '{split($0,a,"|"); print a[2]}'`
	RepoDir=`echo $Repo | awk '{split($0,a,"|"); print a[3]}'`
	RepoName=`echo $Repo | awk '{split($0,a,"|"); print a[4]}'`
	RepoVersion=`echo $Repo | awk '{split($0,a,"|"); print a[5]}'`
	RepoFile=`echo $Repo | awk '{split($0,a,"|"); print a[6]}'`
	RepoOldFile=`echo $Repo | awk '{split($0,a,"|"); print a[7]}'`
	RepoURL=`echo $Repo | awk '{split($0,a,"|"); print a[8]}'`

	echo
	echo "########## $RepoType: $RepoName"
	echo "Directory : "$RepoDir
	echo "Version : "$RepoVersion
	echo "File : "$RepoFile
	echo "Old File : "$RepoOldFile
	echo "URL : "$RepoURL
	echo

	case "$RepoType" in
		"TARGZ")
			# Clean on version changed
			if [ -f /etc/MySB/files/$RepoOldFile ]; then
				rm -vf /etc/MySB/files/$RepoOldFile
			fi

			case "$1" in
				"UPGRADE")
					if [ -f /etc/MySB/files/$RepoFile ]; then
						rm -vf /etc/MySB/files/$RepoFile
					fi
					if [ -d $RepoDir ]; then
						rm -vrf $RepoDir
					fi
				;;
			esac

			if [ ! -f /etc/MySB/files/$RepoFile ]; then
				wget --no-check-certificate $RepoURL -O /etc/MySB/files/$RepoFile
			fi
			if [ ! -d $RepoDir ]; then
				tar -zxvf /etc/MySB/files/$RepoFile -C /etc/MySB/temp/

				SubDir="`tar -ztf /etc/MySB/files/$RepoFile | sed -e 's@/.*@@' | uniq`"
				if [ -d /etc/MySB/temp/$SubDir ]; then
					mv /etc/MySB/temp/$SubDir $RepoDir
				fi
			fi
		;;
		"WBM")
			# Clean on version changed
			if [ -f /etc/MySB/files/$RepoOldFile ]; then
				rm -vf /etc/MySB/files/$RepoOldFile
			fi

			case "$1" in
				"UPGRADE")
					if [ -f $RepoDir/$RepoFile ]; then
						rm -vf $RepoDir/$RepoFile
					fi
				;;
			esac

			if [ ! -f $RepoDir/$RepoFile ]; then
				wget --no-check-certificate $RepoURL -O $RepoDir/$RepoFile
			fi
		;;
		"SVN")
			case "$1" in
				"UPGRADE")
					if [ -d $RepoDir ]; then
						svn up $RepoDir
						if [ $? -gt 0 ]; then
							svn switch $RepoURL $RepoDir
						fi
					else
						svn co $RepoURL $RepoDir
					fi
				;;
				*)
					if [ -d $RepoDir/.svn ]; then
						svn switch $RepoURL $RepoDir
					else
						svn co $RepoURL $RepoDir
					fi
				;;
			esac
		;;
		"GIT")
			case "$1" in
				"UPGRADE")
					if [ -d $RepoDir/ ]; then
						cd $RepoDir/
						git stash
						git pull
					else
						git clone $RepoURL $RepoDir
					fi
				;;
				*)
					if [ ! -d $RepoDir ]; then
						git clone $RepoURL $RepoDir
					fi
				;;
			esac
		;;
	esac

	if [ $? -gt 0 ]; then
		case "$RepoName" in
			"Cakebox-Light")
				RemovePluginCakebox=YES
				sqlite3 -echo $MySB_DB "UPDATE services SET to_install = '0', is_installed = '0' WHERE serv_name = 'CakeBox-Light';"
			;;
			"Seedbox-Manager")
				RemovePluginManager=YES
				sqlite3 -echo $MySB_DB "UPDATE services SET to_install = '0', is_installed = '0' WHERE serv_name = 'Seedbox-Manager';"
			;;
			"Composer"|"Node")
				RemovePluginCakebox=YES
				RemovePluginManager=YES
				sqlite3 -echo $MySB_DB "UPDATE services SET to_install = '0', is_installed = '0' WHERE serv_name = 'CakeBox-Light';"
				sqlite3 -echo $MySB_DB "UPDATE services SET to_install = '0', is_installed = '0' WHERE serv_name = 'Seedbox-Manager';"
			;;
			"XMLRPC"|"LibTorrent"|"rTorrent"|"ruTorrent"|"ruTorrents Official Plugins")
				echo "$RepoURL" >> /etc/MySB/temp/continue
			;;
		esac
	fi	
done
unset IFS

if [ "$RemovePluginCakebox" == "YES" ]; then
	PluginDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin Link Cakebox'\"`"
	if [ -d $PluginDir ]; then rm -vrf $PluginDir; fi
fi
if [ "$RemovePluginManager" == "YES" ]; then
	PluginDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin Link Manager'\"`"
	if [ -d $PluginDir ]; then rm -vrf $PluginDir; fi
fi

# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################