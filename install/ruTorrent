##################### FIRST LINE #####################################

#### STOP services
ManageServices stop "cron"
ListingUsers
for seedUser in $UsersList; do
	service rtorrent-$seedUser stop
done

#### ruTorrent + Official Plugins
echo
echo "########## ruTorrent + Official Plugins"
echo
RutorrentUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent'\"`"
RutorrentPluginsUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrents Official Plugins'\"`"
if [ -d $RutorrentDir ]; then
	svn up $RutorrentDir
	svn switch $RutorrentPluginsUrl $RutorrentPluginsDir
else
	svn co $RutorrentUrl $RutorrentDir
	svn switch $RutorrentPluginsUrl $RutorrentPluginsDir
fi

#### Plugin Chat
echo
echo "########## Plugin Chat"
echo
PluginChatDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin Chat'\"`"
PluginChatUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin Chat'\"`"
if [ -d $PluginChatDir ]; then
	svn up $PluginChatDir
else
	svn co $PluginChatUrl $PluginChatDir
fi

#### Plugin Logoff
PluginLogoffDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin Chat'\"`"
PluginLogoffUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin Chat'\"`"
echo
echo "########## Plugin Logoff"
echo
if [ -d $PluginLogoffDir ]; then
	svn up $PluginLogoffDir
else
	svn co $PluginLogoffUrl $PluginLogoffDir
fi

#### Plugin tAdd-Labels
echo
echo "########## Plugin tAdd-Labels"
echo
PluginLbllDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin tAdd-Labels'\"`"
PluginLbllUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin tAdd-Labels'\"`"
PluginLbllFile="`sqlite3 $MySB_DB \"SELECT file FROM repositories WHERE name = 'ruTorrent Plugin tAdd-Labels'\"`"
if [ "$1" == "REFRESH" ]; then 
	if [ -d $PluginLbllDir ]; then
		rm -vrf $PluginLbllDir
	fi
	if [ ! -f /etc/MySB/files/$PluginLbllFile ]; then
		wget --no-check-certificate $PluginLbllUrl -O /etc/MySB/files/$PluginLbllFile
	fi
	tar -zxvf /etc/MySB/files/$PluginLbllFile -C /etc/MySB/temp/	
	SubDirLbll="`tar -ztf /etc/MySB/files/$PluginLbllFile | sed -e 's@/.*@@' | uniq`"
	if [ -d /etc/MySB/temp/$SubDirLbll ]; then
		mv /etc/MySB/temp/$SubDirLbll $PluginLbllDir
	fi
fi

#### Plugin Filemanager
echo
echo "########## Plugin Filemanager"
echo
PluginFilemanagerDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin FileManager'\"`"
PluginFilemanagerUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin FileManager'\"`"
if [ -d $PluginFilemanagerDir ]; then
	svn up $PluginFilemanagerDir
else
	svn co $PluginFilemanagerUrl $PluginFilemanagerDir
fi

#### Plugin NFO
echo
echo "########## Plugin NFO"
echo
PluginNfoDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin NFO'\"`"
PluginNfoUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin NFO'\"`"
PluginNfoFile="`sqlite3 $MySB_DB \"SELECT file FROM repositories WHERE name = 'ruTorrent Plugin NFO'\"`"
if [ "$1" == "REFRESH" ]; then 
	if [ -d $PluginNfoDir ]; then
		rm -vrf $PluginNfoDir
	fi
	if [ ! -f /etc/MySB/files/$PluginNfoFile ]; then
		wget --no-check-certificate $PluginNfoUrl -O /etc/MySB/files/$PluginNfoFile
	fi
	tar -zxvf /etc/MySB/files/$PluginNfoFile -C /etc/MySB/temp/	
	SubDirNfo="`tar -ztf /etc/MySB/files/$PluginNfoFile | sed -e 's@/.*@@' | uniq`"
	if [ -d /etc/MySB/temp/$SubDirNfo ]; then
		mv /etc/MySB/temp/$SubDirNfo $PluginNfoDir
	fi
fi

#### Plugin Ratiocolor
echo
echo "########## Plugin Ratiocolor"
echo
PluginRatiocolorDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin RatioColor'\"`"
PluginRatiocolorUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin RatioColor'\"`"
if [ -d $PluginRatiocolorDir ]; then
	cd $PluginRatiocolorDir
	git stash
	git pull
else
	git clone $PluginRatiocolorUrl $PluginRatiocolorDir
fi
perl -pi -e "s/changeWhat = \"cell-background\";/changeWhat = \"font\";/g" $PluginRatiocolorDir/init.js

#### Plugin FileUpload
echo
echo "########## Plugin FileUpload"
echo
PluginFileuploadDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin FileUpload'\"`"
PluginFileuploadUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin FileUpload'\"`"
if [ -d $PluginFileuploadDir ]; then
	svn up $PluginFileuploadDir
else
	svn co $PluginFileuploadUrl $PluginFileuploadDir
fi

#### Plugin Fileshare
echo
echo "########## Plugin Fileshare"
echo
PluginFileshareDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin FileShare'\"`"
PluginFileshareUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin FileShare'\"`"
if [ -d $PluginFileshareDir ]; then
	svn up $PluginFileshareDir
else
	svn co $PluginFileshareUrl $PluginFileshareDir
fi
if [ -f $PluginFileshareDir/share.php ] && [ ! -h /etc/MySB/web/fileshare.php ]; then
	ln -s $PluginFileshareDir/share.php /etc/MySB/web/fileshare.php
fi

perl -pi -e "s/$limits\['duration'\] = 1;/$limits\['duration'\] = 0;/g" $PluginFileshareDir/conf.php
perl -pi -e "s/$limits\['links'\] = 1;/$limits\['links'\] = 0;/g" $PluginFileshareDir/conf.php
perl -pi -e "s/http:\/\/robits.org\/rutorrent\/share.php/http:\/\/$HostNameFQDN:$Port_HTTPS/g" $PluginFileshareDir/conf.php
perl -pi -e "s/http:\/\/robits.org\/rutorrent\/share.php/https:\/\/$HostNameFQDN:$Port_HTTPS/g" $PluginFileshareDir/conf.php

#### Plugin Stream
echo
echo "########## Plugin Stream"
echo
PluginStreamDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin Stream'\"`"
PluginStreamUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin Stream'\"`"
PluginStreamFile="`sqlite3 $MySB_DB \"SELECT file FROM repositories WHERE name = 'ruTorrent Plugin Stream'\"`"
if [ "$1" == "REFRESH" ]; then 
	if [ -d $PluginStreamDir ]; then
		rm -vrf $PluginStreamDir
	fi
	if [ ! -f /etc/MySB/files/$PluginStreamFile ]; then
		wget --no-check-certificate $PluginStreamUrl -O /etc/MySB/files/$PluginStreamFile
	fi
	tar -zxvf /etc/MySB/files/$PluginStreamFile -C /etc/MySB/temp/	
	SubDirStream="`tar -ztf /etc/MySB/files/$PluginStreamFile | sed -e 's@/.*@@' | uniq`"
	if [ -d /etc/MySB/temp/$SubDirStream ]; then
		mv /etc/MySB/temp/$SubDirStream $PluginStreamDir
	fi
fi
perl -pi -e "s/define\('USE_NGINX', false\);/define\('USE_NGINX', true\);/g" $PluginStreamDir/config.php
perl -pi -e "s/define\('SCHEME', http\);/define\('SCHEME', https\);/g" $PluginStreamDir/config.php
if [ -f $PluginStreamDir/stream.php ] && [ ! -h /etc/MySB/web/stream.php ]; then
	ln -s $PluginStreamDir/stream.php /etc/MySB/web/stream.php
fi

#### Plugin Mediastream
echo
echo "########## Plugin Mediastream"
echo
PluginMediastreamDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'ruTorrent Plugin MediaStream'\"`"
PluginMediastreamUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'ruTorrent Plugin MediaStream'\"`"
if [ -d $PluginMediastreamDir ]; then
	svn up $PluginMediastreamDir
else
	svn co $PluginMediastreamUrl $PluginMediastreamDir
fi
echo "<?php \$streampath = \"https://$HostNameFQDN:$Port_HTTPS/MySB/view.php\"; ?>" > $PluginMediastreamDir/conf.php
if [ -f $PluginMediastreamDir/view.php ] && [ ! -h /etc/MySB/web/view.php ]; then
	ln -s $PluginMediastreamDir/view.php /etc/MySB/web/view.php
fi

#### Theme
echo
echo "########## Plugin Theme"
echo
if [ "`cat $RutorrentDir/css/style.css | grep 'for Oblivion'`" == "" ]; then
	echo "" | tee -a $RutorrentDir/css/style.css
	echo "/* for Oblivion */" | tee -a $RutorrentDir/css/style.css
	echo ".meter-value-start-color { background-color: #E05400 }" | tee -a $RutorrentDir/css/style.css
	echo ".meter-value-end-color { background-color: #8FBC00 }" | tee -a $RutorrentDir/css/style.css
	echo "::-webkit-scrollbar {width:12px;height:12px;padding:0px;margin:0px;}" | tee -a $RutorrentDir/css/style.css
fi
perl -pi -e "s/\$defaultTheme \= \"\"\;/\$defaultTheme \= \"Oblivion\"\;/g" $RutorrentPluginsDir/theme/conf.php

#### ruTorrent favicons trackers
echo
echo "########## ruTorrent favicons trackers"
echo
if [ ! -f $RutorrentPluginsDir/tracklabels/trackers/gks.gs.png ]; then
	wget http://www.ratbox.nl/md/favicons-trackers/gks.gs.png -O $RutorrentPluginsDir/tracklabels/trackers/gks.gs.png
fi
if [ ! -f $RutorrentPluginsDir/tracklabels/trackers/mteam.fr.png ]; then
	wget http://www.ratbox.nl/md/favicons-trackers/mteam.fr.png -O $RutorrentPluginsDir/tracklabels/trackers/mteam.fr.png
fi
if [ ! -f $RutorrentPluginsDir/tracklabels/trackers/montorrent.com.png ]; then
	wget http://www.ratbox.nl/md/favicons-trackers/montorrent.com.png -O $RutorrentPluginsDir/tracklabels/trackers/montorrent.com.png
fi
if [ ! -f $RutorrentPluginsDir/tracklabels/trackers/lakameraobscura.com.png ]; then
	wget http://www.ratbox.nl/md/favicons-trackers/lakameraobscura.com.png -O $RutorrentPluginsDir/tracklabels/trackers/lakameraobscura.com.png
fi

#### PlowShare4
echo
echo "########## PlowShare4"
echo
PluginPlowshareDir="`sqlite3 $MySB_DB \"SELECT dir FROM repositories WHERE name = 'Plowshare4'\"`"
PluginPlowshareUrl="`sqlite3 $MySB_DB \"SELECT url FROM repositories WHERE name = 'Plowshare4'\"`"
if [ -d $PluginPlowshareDir ]; then
	cd $PluginPlowshareDir/
	git stash
	git pull
	make clean
else
	git clone $PluginPlowshareUrl $PluginPlowshareDir
	cd $PluginPlowshareDir
fi
make install

#### Create directories & change rights
echo
log_daemon_msg "Change owners and rights for files and directories"
ManageDirectoriesAndFiles
StatusLSB

#### Get Tracker Certificates
ScriptInvoke 'screen' '/etc/MySB/scripts/GetTrackersCert.bsh' 'REFRESH'

#### START services
ManageServices start "cron"
for seedUser in $UsersList; do	
	service rtorrent-$seedUser start
done

# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################