##################### FIRST LINE #####################################

#### STOP services
ManageServices stop "cron"
ListingUsers
for seedUser in $UsersList; do
	service rtorrent-$seedUser stop
done

#### ruTorrent + Official Plugins
echo
echo "########## ruTorrent + Official Plugins"
echo
if [ -d /etc/MySB/web/rutorrent ]; then
	svn up /etc/MySB/web/rutorrent
	svn up /etc/MySB/web/rutorrent/plugins
else
	if [ -d /etc/MySB/temp/rutorrent ]; then
		mv -v /etc/MySB/temp/rutorrent /etc/MySB/web/
		svn switch $SVN_rutorrent /etc/MySB/web/rutorrent
		svn switch $SVN_rutorrent_plugins /etc/MySB/web/rutorrent/plugins
	else
		svn co $SVN_rutorrent /etc/MySB/web/rutorrent
		svn switch $SVN_rutorrent_plugins /etc/MySB/web/rutorrent/plugins
	fi
fi

if [ ! -d /etc/MySB/temp/rutorrent ]; then
	# Plugin Chat
	echo
	echo "########## Plugin Chat"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/chat ]; then
		svn up /etc/MySB/web/rutorrent/plugins/chat
	else
		svn co $SVN_rutorrent_plugins_CHAT /etc/MySB/web/rutorrent/plugins/chat
	fi

	# Plugin Logoff
	echo
	echo "########## Plugin Logoff"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/logoff ]; then
		svn up /etc/MySB/web/rutorrent/plugins/logoff
	else
		svn co $SVN_rutorrent_plugins_LOGOFF /etc/MySB/web/rutorrent/plugins/logoff
	fi

	# Plugin tAdd-Labels
	echo
	echo "########## Plugin tAdd-Labels"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/lbll-suite/ ]; then
		rm -vrf /etc/MySB/web/rutorrent/plugins/lbll-suite/
	fi
	if [ -f /etc/MySB/files/lbll-suite.tar.gz ]; then
		rm -vf /etc/MySB/files/lbll-suite.tar.gz
	fi
	wget --no-check-certificate $TARGZ_rutorrent_plugins_TADDLABELS -O /etc/MySB/files/lbll-suite.tar.gz
	tar -zxvf /etc/MySB/files/lbll-suite.tar.gz -C /etc/MySB/web/rutorrent/plugins/

	# Plugin Filemanager
	echo
	echo "########## Plugin Filemanager"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/filemanager ]; then
		svn up /etc/MySB/web/rutorrent/plugins/filemanager
	else
		svn co $SVN_rutorrent_plugins_FILEMANAGER /etc/MySB/web/rutorrent/plugins/filemanager
	fi
	(
	cat <<'EOF'
<?php
$fm["tempdir"] = "/tmp";                // path were to store temporary data ; must be writable
$fm["mkdperm"] = 775;           // default permission to set to new created directories

// set with fullpath to binary or leave empty
$pathToExternals["rar"] = "/usr/bin/rar";
$pathToExternals["zip"] = "/usr/bin/zip";
$pathToExternals["unzip"] = "/usr/bin/unzip";
$pathToExternals["tar"] = "/bin/tar";
$pathToExternals["gzip"] = "/bin/gzip";
$pathToExternals["bzip2"] = "/bin/bzip2";

// archive mangling, see archiver man page before editing
$fm["archive"]["types"] = array("rar", "zip", "tar", "gzip", "bzip2");

$fm["archive"]["compress"][0] = range(0, 5);
$fm["archive"]["compress"][1] = array("-0", "-1", "-9");
$fm["archive"]["compress"][2] = $fm["archive"]["compress"][3] = $fm["archive"]["compress"][4] = array(0);

EOF
	) > /etc/MySB/web/rutorrent/plugins/filemanager/conf.php

	# Plugin Fileshare
	echo
	echo "########## Plugin Fileshare"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/fileshare ]; then
		svn up /etc/MySB/web/rutorrent/plugins/fileshare
	else
		svn co $SVN_rutorrent_plugins_FILESHARE /etc/MySB/web/rutorrent/plugins/fileshare
	fi
	if [ ! -f /etc/MySB/web/fileshare.php ]; then
		ln -s /etc/MySB/web/rutorrent/plugins/fileshare/share.php /etc/MySB/web/fileshare.php
	fi

	(
	cat <<'EOF'
<?php
// limits
// 0 = unlimited
$limits['duration'] = 0;        // maximum duration hours
$limits['links'] = 0;   //maximum sharing links per user

// path on domain where a symlink to share.php can be found
// example: http://mydomain.com/share.php
$downloadpath = 'https://<servername>:<port>/fileshare.php';

EOF
	) > /etc/MySB/web/rutorrent/plugins/fileshare/conf.php
	perl -pi -e "s/<servername>/$HostNameFQDN/g" /etc/MySB/web/rutorrent/plugins/fileshare/conf.php
	perl -pi -e "s/<port>/$Port_HTTPS/g" /etc/MySB/web/rutorrent/plugins/fileshare/conf.php

	# Plugin NFO
	echo
	echo "########## Plugin NFO"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/nfo ]; then
		rm -vrf /etc/MySB/web/rutorrent/plugins/nfo
	fi
	if [ -f /etc/MySB/files/nfo.tar.gz ]; then
		rm -vf /etc/MySB/files/nfo.tar.gz
	fi
	wget --no-check-certificate $TARGZ_rutorrent_plugins_NFO -O /etc/MySB/files/nfo.tar.gz
	tar -zxvf /etc/MySB/files/nfo.tar.gz -C /etc/MySB/web/rutorrent/plugins/

	# Plugin Ratiocolor
	echo
	echo "########## Plugin Ratiocolor"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/rutorrent-ratiocolor ] && [ ! -d /etc/MySB/web/rutorrent/plugins/ratiocolor ]; then
		mv -v /etc/MySB/web/rutorrent/plugins/rutorrent-ratiocolor /etc/MySB/web/rutorrent/plugins/ratiocolor
	fi
	if [ -d /etc/MySB/web/rutorrent/plugins/ratiocolor ]; then
		cd /etc/MySB/web/rutorrent/plugins/ratiocolor/
		git stash
		git pull
	else
		git clone $GIT_rutorrent_plugins_RATIOCOLOR /etc/MySB/web/rutorrent/plugins/ratiocolor
	fi
	perl -pi -e "s/changeWhat = \"cell-background\";/changeWhat = \"font\";/g" /etc/MySB/web/rutorrent/plugins/ratiocolor/init.js

	# Plugin Theme
	echo
	echo "########## Plugin Theme"
	echo
	if [ "`cat /etc/MySB/web/rutorrent/css/style.css | grep 'for Oblivion'`" == "" ];then
		echo "" | tee -a /etc/MySB/web/rutorrent/css/style.css
		echo "/* for Oblivion */" | tee -a /etc/MySB/web/rutorrent/css/style.css
		echo ".meter-value-start-color { background-color: #E05400 }" | tee -a /etc/MySB/web/rutorrent/css/style.css
		echo ".meter-value-end-color { background-color: #8FBC00 }" | tee -a /etc/MySB/web/rutorrent/css/style.css
		echo "::-webkit-scrollbar {width:12px;height:12px;padding:0px;margin:0px;}" | tee -a /etc/MySB/web/rutorrent/css/style.css
	fi
	perl -pi -e "s/\$defaultTheme \= \"\"\;/\$defaultTheme \= \"Oblivion\"\;/g" /etc/MySB/web/rutorrent/plugins/theme/conf.php

	# Plugin FileUpload
	echo
	echo "########## Plugin FileUpload"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/fileupload ]; then
		svn up /etc/MySB/web/rutorrent/plugins/fileupload
	else
		svn co $SVN_rutorrent_plugins_FILEUPLOAD /etc/MySB/web/rutorrent/plugins/fileupload
	fi

	# Plugin Stream
	echo
	echo "########## Plugin Stream"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/stream/ ]; then
		rm -vrf /etc/MySB/web/rutorrent/plugins/stream/
	fi
	if [ -f /etc/MySB/files/stream.tar.gz ]; then
		rm -vf /etc/MySB/files/stream.tar.gz
	fi
	wget --no-check-certificate $TARGZ_rutorrent_plugins_STREAM -O /etc/MySB/files/stream.tar.gz
	tar -zxvf /etc/MySB/files/stream.tar.gz -C /etc/MySB/web/rutorrent/plugins/
	perl -pi -e "s/define\('USE_NGINX', false\);/define\('USE_NGINX', true\);/g" /etc/MySB/web/rutorrent/plugins/stream/config.php
	perl -pi -e "s/define\('SCHEME', http\);/define\('SCHEME', https\);/g" /etc/MySB/web/rutorrent/plugins/stream/config.php
	if [ ! -f /etc/MySB/web/stream.php ] && [ -f /etc/MySB/web/rutorrent/plugins/stream/stream.php ]; then
		ln -s /etc/MySB/web/rutorrent/plugins/stream/stream.php /etc/MySB/web/stream.php
	fi

	# Plugin Mediastream
	echo
	echo "########## Plugin Mediastream"
	echo
	if [ -d /etc/MySB/web/rutorrent/plugins/mediastream ]; then
		svn up /etc/MySB/web/rutorrent/plugins/mediastream
	else
		svn co $SVN_rutorrent_plugins_MEDIASTREAM /etc/MySB/web/rutorrent/plugins/mediastream
	fi
	echo "<?php \$streampath = \"https://$HostNameFQDN:$Port_HTTPS/MySB/view.php\"; ?>" > /etc/MySB/web/rutorrent/plugins/mediastream/conf.php
	if [ ! -f /etc/MySB/web/view.php ] && [ -f /etc/MySB/web/rutorrent/plugins/mediastream/view.php ]; then
		ln -s /etc/MySB/web/rutorrent/plugins/mediastream/view.php /etc/MySB/web/view.php
	fi

	# ruTorrent favicons trackers
	echo
	echo "########## ruTorrent favicons trackers"
	echo
	cd /etc/MySB/web/rutorrent/plugins/tracklabels/trackers
	if [ ! -f gks.gs.png ]; then
		wget http://www.ratbox.nl/md/favicons-trackers/gks.gs.png
	fi
	if [ ! -f mteam.fr.png ]; then
		wget http://www.ratbox.nl/md/favicons-trackers/mteam.fr.png
	fi
	if [ ! -f montorrent.com.png ]; then
		wget http://www.ratbox.nl/md/favicons-trackers/montorrent.com.png
	fi
	if [ ! -f lakameraobscura.com.png ]; then
		wget http://www.ratbox.nl/md/favicons-trackers/lakameraobscura.com.png
	fi

	# /etc/MySB/web/rutorrent/conf/config.php
	(
	cat <<'EOF'
<?php
        // configuration parameters

        // for snoopy client
        @define('HTTP_USER_AGENT', 'Mozilla/5.0 (Windows NT 6.0; WOW64; rv:12.0) Gecko/20100101 Firefox/12.0', true);
        @define('HTTP_TIME_OUT', 30, true);     // in seconds
        @define('HTTP_USE_GZIP', true, true);
        $httpIP = null;                         // IP string. Or null for any.

        @define('RPC_TIME_OUT', 5, true);       // in seconds

        @define('LOG_RPC_CALLS', false, true);
        @define('LOG_RPC_FAULTS', true, true);

        // for php
        @define('PHP_USE_GZIP', false, true);
        @define('PHP_GZIP_LEVEL', 2, true);

        $schedule_rand = 10;                    // rand for schedulers start, +0..X seconds

        $do_diagnostic = true;
        $log_file = '/tmp/errors.log';          // path to log file (comment or leave blank to disable logging)

        $saveUploadedTorrents = true;           // Save uploaded torrents to profile/torrents directory or not
        $overwriteUploadedTorrents = false;     // Overwrite existing uploaded torrents in profile/torrents directory or make unique name

        $topDirectory = '/home';                    // Upper available directory. Absolute path with trail slash.
        $forbidUserSettings = false;

        $scgi_port = 5000;
        $scgi_host = "127.0.0.1";

        // For web->rtorrent link through unix domain socket
        // (scgi_local in rtorrent conf file), change variables
        // above to something like this:
        //
        // $scgi_port = 0;
        // $scgi_host = "unix:///tmp/rpc.socket";
        $pathToExternals = array(
                "php"   => '/usr/bin/php',                  // Something like /usr/bin/php. If empty, will be found in PATH.
                "curl"  => '/usr/bin/curl',                     // Something like /usr/bin/curl. If empty, will be found in PATH.
                "gzip"  => '/bin/gzip',                 // Something like /usr/bin/gzip. If empty, will be found in PATH.
                "id"  => '/usr/bin/id',                 // Something like /usr/bin/id. If empty, will be found in PATH.
                "stat"  => '/usr/bin/stat',                     // Something like /usr/bin/stat. If empty, will be found in PATH.
        );

        $localhosts = array(                    // list of local interfaces
                "127.0.0.1",
                "localhost",
        );

        $profilePath = '../share';              // Path to user profiles
        $profileMask = 0777;                    // Mask for files and directory creation in user profiles.
                                                // Both Webserver and rtorrent users must have read-write access to it.
                                                // For example, if Webserver and rtorrent users are in the same group then the value may be 0770.

        $tempDirectory = null;                  // Temp directory. Absolute path with trail slash. If null, then autodetect will be used.

        $XMLRPCMountPoint = "/RPC2";            // DO NOT DELETE THIS LINE!!! DO NOT COMMENT THIS LINE!!!

		
EOF
	) > /etc/MySB/web/rutorrent/conf/config.php

	#### create/conf.php
	(
	cat <<'EOF'
<?php
// configuration parameters

@define('MAX_CONSOLE_SIZE',25,true);
	$useExternal = 'buildtorrent';			// Valid choices:
					// false - use internal realization (may be too slow for large files)
					// "transmissioncli" - use program transmissioncli (see http://www.transmissionbt.com/)
					// "transmissioncreate" - use program transmissioncreate (see http://www.transmissionbt.com/)
					// "createtorrent" - use program createtorrent (see http://www.createtorrent.com)
					// "mktorrent" - use program createtorrent (see http://mktorrent.sourceforge.net)
					// "buildtorrent" - use program buildtorrent (see http://claudiusmaximus.goto10.org/cm/torrent.html)
$pathToCreatetorrent = '/usr/bin/buildtorrent';		// Something like /bin/createtorrent, or /bin/transmissioncli. If empty, program will be found in PATH.
$pathToExternals["pgrep"] = '/usr/bin/pgrep';		// Something like /usr/bin/pgrep. If empty, will be found in PATH.

EOF
	) > /etc/MySB/web/rutorrent/plugins/create/conf.php
else
	rm -vrf /etc/MySB/temp/rutorrent
fi

# PlowShare4
echo
echo "########## PlowShare4"
echo
if [ -d /etc/MySB/sources/plowshare ]; then
	cd /etc/MySB/sources/plowshare/
	git stash
	git pull
	make clean
else
	if [ -d /etc/MySB/temp/plowshare* ]; then
		mv -v /etc/MySB/temp/plowshare* /etc/MySB/sources/
	else
		git clone $GIT_plowshare /etc/MySB/sources/plowshare
	fi
	cd /etc/MySB/sources/plowshare
fi
make install

if [ -d /etc/MySB/temp/plowshare* ]; then
	rm -vrf /etc/MySB/temp/plowshare*
fi

#### Create directories & change rights
echo
log_daemon_msg "Change owners and rights for files and directories"
ManageDirectoriesAndFiles
StatusLSB

#### Get Tracker Certificates
if [ "$1" == "REFRESH" ]; then
	ScriptInvoke 'screen' '/etc/MySB/scripts/GetTrackersCert.bsh' 'REFRESH'
else
	ScriptInvoke 'screen' '/etc/MySB/scripts/GetTrackersCert.bsh'
fi

#### START services
ManageServices start "cron"
ListingUsers
for seedUser in $UsersList; do
	service rtorrent-$seedUser start
done

# -----------------------------------------
source /etc/MySB/inc/includes_after.bsh
# -----------------------------------------
##################### LAST LINE ######################################