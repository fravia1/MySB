##################### FIRST LINE #####################################

#### Install packages
PackagesManage install "netselect-apt"

#### Change working directory
cd /etc/MySB/files

#### Detect mirrors
echo "# Generated by 'netselect-apt'" > /etc/apt/sources.list
netselect-apt -t 3 -n -s stable -o /etc/MySB/temp/sources.list > /etc/MySB/temp/fastest_mirrors
MirrorsList="`cat /etc/MySB/temp/fastest_mirrors | grep 'http'`"
for Mirror in $MirrorsList; do
	Mirror="`echo $Mirror | sed -e 's/^ //g;'`"
	
	echo "# $Mirror" >> /etc/apt/sources.list
	echo "deb $Mirror $DEBIAN_VERSION main contrib non-free" >> /etc/apt/sources.list
	echo "deb-src $Mirror $DEBIAN_VERSION main contrib non-free" >> /etc/apt/sources.list
	echo >> /etc/apt/sources.list
done
echo "# Security" >> /etc/apt/sources.list
echo "deb http://security.debian.org stable/updates main contrib non-free" >> /etc/apt/sources.list
echo "deb-src http://security.debian.org stable/updates main contrib non-free" >> /etc/apt/sources.list
sed -i "s/stable/$DEBIAN_VERSION/g;" /etc/apt/sources.list
rm -f /etc/MySB/temp/fastest_mirrors
rm -f /etc/MySB/temp/sources.list

#### dotdeb php 5.5
echo "# dotdeb php 5.5" > /etc/apt/sources.list.d/dotdeb_php55.list
echo "" >> /etc/apt/sources.list.d/dotdeb_php55.list
echo "# wget http://www.dotdeb.org/dotdeb.gpg" >> /etc/apt/sources.list.d/dotdeb_php55.list
echo "# apt-key add dotdeb.gpg" >> /etc/apt/sources.list.d/dotdeb_php55.list
echo "" >> /etc/apt/sources.list.d/dotdeb_php55.list
echo "deb http://packages.dotdeb.org <debian_version>-php55 all" >> /etc/apt/sources.list.d/dotdeb_php55.list
echo "deb-src http://packages.dotdeb.org <debian_version>-php55 all" >> /etc/apt/sources.list.d/dotdeb_php55.list
sed -i "s/<debian_version>/$DEBIAN_VERSION/g;"  /etc/apt/sources.list.d/dotdeb_php55.list
wget http://www.dotdeb.org/dotdeb.gpg
apt-key add dotdeb.gpg
rm -vf dotdeb.gpg

#### nginx 1.6
echo "# nginx 1.6" > /etc/apt/sources.list.d/dotdeb.list
echo "" >> /etc/apt/sources.list.d/dotdeb.list
echo "# wget http://www.dotdeb.org/dotdeb.gpg" >> /etc/apt/sources.list.d/dotdeb.list
echo "# apt-key add dotdeb.gpg" >> /etc/apt/sources.list.d/dotdeb.list
echo "" >> /etc/apt/sources.list.d/dotdeb.list
echo "deb http://packages.dotdeb.org/ <debian_version> all" >> /etc/apt/sources.list.d/dotdeb.list
echo "deb-src http://packages.dotdeb.org/ <debian_version> all" >> /etc/apt/sources.list.d/dotdeb.list
sed -i "s/<debian_version>/$DEBIAN_VERSION/g;"  /etc/apt/sources.list.d/dotdeb.list
wget http://nginx.org/keys/nginx_signing.key
apt-key add nginx_signing.key
rm -vf nginx_signing.key

#### Force apt-get update
if [ -s $MySB_DB ] && CheckCommand 0 sqlite3; then
	sqlite3 $MySB_DB "UPDATE system SET apt_update = 1, apt_date = datetime('now','localtime') WHERE id_system = 1;"
fi

#### Upgrade the system
ScriptInvoke 'source' '/etc/MySB/bin/MySB_UpgradeSystem'

#### Show new /etc/apt/sources.list
echo
cat /etc/apt/sources.list
echo
	
# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################