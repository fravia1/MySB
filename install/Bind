##################### FIRST LINE #####################################

#### Install packages
if ! CheckCommand 0 named; then
	PackagesManage install "bind9"
fi

#### Correcting minor bug display in Bind9 init script
sed -i "s/echo \"waiting for pid \$pid to die\"/break #echo \"waiting for pid \$pid to die\"/g" /etc/init.d/bind9
sed -i "s/echo \"giving up on pid \$pid with kill -0; trying -9\"/#echo \"giving up on pid \$pid with kill -0; trying -9\"/g" /etc/init.d/bind9
sed -i "s/echo \"giving up on pid \$pid\"/#echo \"giving up on pid \$pid\"/g" /etc/init.d/bind9

#### START services
ManageServices stop "bind9"

#### /etc/bind/named.conf
# echo "include /etc/bind/named.conf.blacklists"
# echo "include \"/etc/bind/named.conf.blacklists\";" >> /etc/bind/named.conf

#### /etc/bind/named.conf.local
perl -pi -e "s/\/\/include \"\/etc\/bind\/zones.rfc1918\";/include \"\/etc\/bind\/zones.rfc1918\";/g" /etc/bind/named.conf.local
echo "include \"/etc/bind/log.conf\";" >> /etc/bind/named.conf.local
echo "include \"/etc/bind/MySB.zones.blakclists\";" >> /etc/bind/named.conf.local

#### /etc/bind/log.conf
cp /etc/MySB/templates/etc.bind.log.conf.template /etc/bind/log.conf
chmod 0644 /etc/bind/log.conf
chown root:bind /etc/bind/log.conf
if [ ! -d /var/log/bind ]; then
	mkdir /var/log/bind
	chown bind:bind /var/log/bind
	chmod 0764 /var/log/bind
fi

#### /etc/bind/named.conf.options
chmod 0644 /etc/bind/named.conf.options
chown root:bind /etc/bind/named.conf.options

#### /etc/bind/intercept.zone
# echo "cp /etc/MySB/templates/etc.bind.intercept.zone.template /etc/bind/intercept.zone"
# cp /etc/MySB/templates/etc.bind.intercept.zone.template /etc/bind/intercept.zone
# perl -pi -e "s/<server_name>/$HostNameFQDN/g" /etc/bind/intercept.zone
# chmod 0644 /etc/bind/intercept.zone
# chown root:bind /etc/bind/intercept.zone

#### /etc/bind/MySB.ones.blakclists
echo "#### MySB - Blacklisted domains (ex: inactive trackers)" > /etc/bind/MySB.ones.blakclists
chmod 0644 /etc/bind/MySB.ones.blakclists
chown root:bind /etc/bind/MySB.ones.blakclists

#### logrotate
(
cat <<'EOF'
/var/log/bind/*.log {
	weekly
	missingok
	rotate 10
	compress
	delaycompress
	create 775 root bind
	postrotate
	/etc/init.d/bind9 reload > /dev/null
	endscript
}

EOF
) > /etc/logrotate.d/bind

sqlite3 -echo $MySB_DB "UPDATE services SET to_install = '0', is_installed = '1' WHERE serv_name = 'BIND';"

#### START services
ManageServices start "bind9"

# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################