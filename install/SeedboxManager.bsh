##################### FIRST LINE #####################################

if [ "$USAGE" == "ON" ]; then
	if [ "`screen -ls | grep SeedboxManager`" == "" ]; then
		if [ "$IsInstalled_Manager" == "NO" ]; then
			echo
			echo -e "${CYELLOW}SeedBox-Manager is not installed!$CEND"
			QuestionGetString NO  "Install Seedbox-Manager? " ToInstall_Manager $ToInstall_Manager

			if [ "$ToInstall_Manager" == "YES" ]; then
				QuestionGetString NO  "Contact email for Seedbox-Manager: " MainUserEmail $MainUserEmail
			fi

			sqlite3 -echo $MySB_DB "UPDATE services SET to_install = '$(echo $ToInstall_Manager | sed 's/NO/0/g;' | sed 's/YES/1/g;')' WHERE serv_name = 'Seedbox-Manager';"
		fi
	fi
fi

if [ "$ToInstall_Manager" == "YES" ]; then
	cp /etc/MySB/templates/etc.nginx.locations.seedbox-manager.conf.template /etc/nginx/locations/3_seedbox-manager.conf

	## app
	if [ -d /etc/MySB/web/seedbox-manager ]; then
		cd /etc/MySB/web/seedbox-manager/
		git stash
		git pull
	else
		if [ -d /etc/MySB/temp/seedbox-manager ]; then
			mv -v /etc/MySB/temp/seedbox-manager /etc/MySB/web/
		else
			git clone $GIT_manager /etc/MySB/web/seedbox-manager
		fi
	fi

	if [ -d /etc/MySB/temp/seedbox-manager ]; then
		rm -vrf /etc/MySB/temp/seedbox-manager
	fi

	cd /etc/MySB/web/seedbox-manager

(
cat <<'EOF'
#include "suppression.h"

void supprLock (char nickname[])
{
    //Déclarations
    char chaine [100] = {0};

    snprintf(chaine, 100, "service rtorrent-%s stop\n", nickname);
    printf("%s", chaine);
    system (chaine);
}
EOF
) > /etc/MySB/web/seedbox-manager/source-reboot-rtorrent/suppression.c

	(
	cat <<'EOF'
#include "reboot.h"

void reboot (char nickname[])
{
    //Déclarations
    char chaine [100] = {0};

    snprintf(chaine, 100, "service rtorrent-%s start\n", nickname);
    printf("%s", chaine);
    system (chaine);
}
EOF
	) > /etc/MySB/web/seedbox-manager/source-reboot-rtorrent/reboot.c
	
	sed -i "s/http:\/\/{{ host }}/https:\/\/{{ host }}/g;" /etc/MySB/web/seedbox-manager/public/themes/default/template/bloc-ftp.html

	composer install
	bower install --allow-root --config.interactive=false
	chown -R www-data:www-data /etc/MySB/web/seedbox-manager/
	cd ./source-reboot-rtorrent/
	chmod +x install.sh
	./install.sh

	# seedbox-manager ruTorrent Plugin
	if [ -d /etc/MySB/web/rutorrent/plugins/linkseedboxmanager ]; then
		cd /etc/MySB/web/rutorrent/plugins/linkseedboxmanager 
		git stash
		git pull
	else
		git clone $GIT_rutorrent_plugins_MANAGER /etc/MySB/web/rutorrent/plugins/linkseedboxmanager
	fi
	sed -i "s/http:\/\/seedbox-manager.ndd.tld/https:\/\/$HostNameFQDN:$Port_HTTPS\/sm\//g;" /etc/MySB/web/rutorrent/plugins/linkseedboxmanager/conf.php
	
	#### Create directories & change rights
	ManageDirectoriesAndFiles
	
	sqlite3 -echo $MySB_DB "UPDATE services SET to_install = '0', is_installed = '1' WHERE serv_name = 'Seedbox-Manager';"
fi

# -----------------------------------------
source /etc/MySB/inc/includes_after.bsh
