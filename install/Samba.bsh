##################### FIRST LINE #####################################

if [ "$ToInstall_Samba" == "YES" ]; then
	#### Install packages
	if ! hash smbd 2> /dev/null; then
		PackagesManage install "samba"
	fi

	#### smb.conf
	if [ ! -f /etc/samba/smb.conf.ORIGINAL ] && [ -f /etc/samba/smb.conf ]; then
		cp /etc/samba/smb.conf /etc/samba/smb.conf.ORIGINAL
	fi

	cp /etc/MySB/templates/etc.samba.smb.conf.template /etc/samba/smb.conf

	sqlite3 $MySB_DB "UPDATE services SET to_install = '0', is_installed = '1' WHERE serv_name = 'Samba';"
	
	#### START services
	ManageServices start "samba"	
fi

# -----------------------------------------
source /etc/MySB/inc/includes_after.bsh
