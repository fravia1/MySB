##################### FIRST LINE #####################################

if [ "$USAGE" == "ON" ]; then
	ListingUsers
	LIST=""
	for User in $UsersList; do
		if [ "$User" != "$MainUser" ]; then
			LIST="$LIST|${CYELLOW}$User$CEND"
		fi
	done

	if [ ! -z $LIST ]; then
		LIST="`echo \($LIST\) | sed -e 's/^//g;' | sed -e 's/(|/(/g;'`"
		echo -e "${CBLUE}Available users to delete:$CEND $LIST"
		echo -e "${CYELLOW}Type$CEND ${CGREEN}none$CEND ${CYELLOW}to cancel.$CEND"
	else
		echo -e "${CRED}Any user to delete ...$CEND $LIST"
		EndingScript 0 0
	fi	

	QuestionGetString NO  "Type username to DELETE: " SeedboxUser

	if [ "$SeedboxUser" == "none" ]; then
		EndingScript 0 0
	else
		while [ "$SeedboxUser" == "$MainUser" ]; do
			QuestionGetString NO  "Type username to DELETE: " SeedboxUser
		done
	fi
fi

#### STOP services
ManageServices stop "cron rtorrent-$SeedboxUser"

#### User ID
UserId=$(sqlite3 $MySB_DB "SELECT id_users FROM users WHERE users_ident = '$SeedboxUser'")

#### crontab
log_daemon_msg "Delete cron for $SeedboxUser"
crontab -l > /tmp/crontab.tmp
sed -i '/'$SeedboxUser'/d' /tmp/crontab.tmp
crontab /tmp/crontab.tmp
rm -f /tmp/crontab.tmp
StatusLSB

#### FTP
log_daemon_msg "Delete FTP access & share for $SeedboxUser"
sed -i '/'$SeedboxUser'/d' /etc/vsftpd.chroot_list
umount /home/$SeedboxUser/rtorrent/share
StatusLSB

#### NFS
log_daemon_msg "Delete NFS access for $SeedboxUser"
sed -i '/'$SeedboxUser'/d' /etc/exports
StatusLSB

#### Samba
log_daemon_msg "Delete Samba access for $SeedboxUser"
smbpasswd -x $SeedboxUser &> /dev/null
StatusLSB

#### NginX - remove current password from htpassword
log_daemon_msg "Delete Web server account for $SeedboxUser"
htpasswd -D /etc/nginx/passwd/MySB $SeedboxUser
rm -f /etc/nginx/passwd/MySB_$SeedboxUser
StatusLSB

#### remove files
log_daemon_msg "Remove files and init script for $SeedboxUser"
update-rc.d -f rtorrent-$SeedboxUser.conf remove &> /dev/null
if [ -f /etc/init.d/rtorrent-$SeedboxUser.conf ]; then
	rm -f /etc/init.d/rtorrent-$SeedboxUser.conf
fi
if [ -f /etc/nginx/rpc/$SeedboxUser.conf ]; then
	rm -f /etc/nginx/rpc/$SeedboxUser.conf
fi
if [ -f /etc/nginx/rpc/$SeedboxUser.cakebox ]; then
	rm -f /etc/nginx/rpc/$SeedboxUser.cakebox
fi
if [ -f /etc/MySB/web/openvpn/openvpn_$SeedboxUser.zip ]; then
	/etc/MySB/web/openvpn/openvpn_$SeedboxUser.zip
fi
if [ -d /etc/MySB/web/rutorrent/conf/users/$SeedboxUser ]; then
	rm -rf /etc/MySB/web/rutorrent/conf/users/$SeedboxUser
fi
if [ -d /etc/MySB/web/rutorrent/share/users/$SeedboxUser ]; then
	rm -rf /etc/MySB/web/rutorrent/share/users/$SeedboxUser
fi
if [ -d /etc/MySB/web/seedbox-manager/conf/users/$SeedboxUser ]; then
	rm -rf /etc/MySB/web/seedbox-manager/conf/users/$SeedboxUser
fi
StatusLSB

#### Remove user from database
log_daemon_msg "Remove files and init script for $SeedboxUser"
sqlite3 $MySB_DB "DELETE FROM users_addresses WHERE id_users = '$UserId'"
sqlite3 $MySB_DB "DELETE FROM users WHERE users_ident = '$SeedboxUser'"
StatusLSB

#### rtorrent max memory
MEMORY=`free -m | grep Mem | awk '{ print $2 }'`
CountingUsers
ListingUsers
for User in $UsersList; do
	log_daemon_msg "Changing parameter 'pieces.memory.max.set' for $User"
	LIGN=$(sed -n '/pieces.memory.max.set/=' /home/$User/.rtorrent.rc)
	sed -i ''$LIGN'd' /home/$User/.rtorrent.rc
	sed -i ''$LIGN'i\#pieces.memory.max.set = '$(((($MEMORY/$TotalUsers)*1024)*1024))'\n' /home/$User/.rtorrent.rc
	StatusLSB
done

#### system user
log_daemon_msg "Delete $SeedboxUser system account"
userdel --remove --force $SeedboxUser &> /dev/null
if [ -d /home/$SeedboxUser ]; then
	rm -vrf /home/$SeedboxUser
fi
if [ -d /var/run/screen/S-$SeedboxUser ]; then
	rm -vrf /var/run/screen/S-$SeedboxUser
fi
StatusLSB

#### OpenVPN
if [ "$IsInstalled_OpenVPN" == "YES" ]; then
	log_daemon_msg "Revoke OpenVPN user $NewUser"
	screen -dmS OpenVPN_Delete /bin/bash /etc/MySB/install/OpenVPN.bsh delete "$NewUser";
	WaitingSTD OpenVPN_Delete
	StatusLSB
fi

#### renting
MonthlyPayment "$SeedboxUser"

#### Create new security rules
log_daemon_msg "Create new security rules"
ScriptInvoke 'screen' '/etc/MySB/scripts/FirewallAndSecurity.bsh' 'new'
StatusLSB

#### START services
ManageServices start "cron nfs-kernel-server vsftpd samba nginx"

# -----------------------------------------
source /etc/MySB/inc/includes_after.bsh
# -----------------------------------------
##################### LAST LINE ######################################